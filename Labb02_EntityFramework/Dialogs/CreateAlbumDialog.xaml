<Window x:Class="Labb02_EntityFramework.Dialogs.CreateAlbumDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb02_EntityFramework.Dialogs"
        mc:Ignorable="d"
        Title="CreateAlbumDialog" Height="200" Width="300">
    <Grid
        DataContext="{Binding CreateStuffViewModel}">
        <StackPanel x:Name="MyPanel">
            <Label Content="Create New Album"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"/>
            <Label Content="Title"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Margin="20, 0, 20, 0"/>
            <TextBox Height="20"
                     Margin="20, 0, 20, 0"
                     Text="{Binding AlbumTitle, UpdateSourceTrigger=PropertyChanged}"
                     />
            <Label Content="Artist"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Margin="20, 0, 20, 0"/>
            <ComboBox Margin="20, 0, 20, 0"
                      ItemsSource="{Binding Artists}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding AlbumArtist}"/>
            <DockPanel
                Width="125"
                Margin="20">
                <Button Content="Cancel"
                        Height="20"
                        Width="50"
                        Click="Button_Click"/>

                <Button Content="Create"
                        Height="20"
                        Width="50"
                        HorizontalAlignment="Right"
                        Command="{Binding CreateAlbumCommand}"
                        Click="Button_Click_1"
                        />
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
